@page "/"
@attribute [Route(Url)]

<PageTitle>@(RoomId is null ? "Private chat" : $"Private chat: {RoomId}")</PageTitle>

@if (string.IsNullOrEmpty(RoomId))
{
    <RadzenText TextAlign="TextAlign.Center" 
                TextStyle="TextStyle.H5" 
                TagName="TagName.H1" 
                class="rz-py-5 rz-m-0">
        ¡Selecciona una habitación o crea una para conversar!
    </RadzenText>
}

@code
{
    public const string Url = "/{roomId}";

    [Parameter]
    public string? RoomId { get; set; }
}
